
public class Solution {
	int BIG_NUM = 2000000999;
	
	int[][] visited;
	int tryNum = 0;
	
	int[] queueR;
	int[] queueC;
	
	int front = 0;
	int back = 0;
	
	int rows;
	int cols;
	
	public int solution(int[][] A) {
		visited = A;
		rows = A.length;
		cols = A[0].length;
		queueR = new int[rows*cols + 10];
		queueC = new int[rows*cols+ 10];
		int ans = 0;
		for(int i = 0; i < rows; i++) {
			for(int j = 0; j < cols; j++) {
				if(visited[i][j] < BIG_NUM) {
					tryPosition(i, j);
					ans++;
				}
			}
		}
		return ans;
    }
	
	private void tryPosition(int r, int c) {
		reset();
		push(r, c);
		tryNum = visited[r][c];
		visited[r][c] = BIG_NUM;
		while(hasElements()) {
			int[] rc = pop();
			if(rc == null) {
				System.out.println("Queue empty?");
				break;
			}
			pushIfOk(rc[0]-1, rc[1]);
			pushIfOk(rc[0], rc[1]-1);
			pushIfOk(rc[0]+1, rc[1]);
			pushIfOk(rc[0], rc[1]+1);
		}
	}

	private void pushIfOk(int i, int j) {
		if(!valid(i, j)) {
			return ;
		}
		if(visited[i][j] != tryNum) {
			return ;
		}
		if(visited[i][j] < BIG_NUM) {
			push(i,j);
			visited[i][j] = BIG_NUM;
			//System.out.println("vvv : " + i + " : " + j);
		}
	}

	private int[] pop() {
		int rr = queueR[front];
		int cc = queueC[front];
		front++;
		return new int[]{rr, cc};
	}

	private boolean hasElements() {
		if(front >= back) {
			return false;
		}
		return true;
	}

	private void push(int r, int c) {
		if(!valid(r, c)) {
			return ;
		}
		queueR[back] = r;
		queueC[back] = c;
		back++;
	}

	private boolean valid(int r, int c) {
		if(r >= 0 && r < rows
				&& c >= 0 && c < cols) {
			return true;
		}
		return false;
	}

	private void reset() {
		front = 0;
		back = 0;
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int[][] A = new int[][]{{5, 4, 4}, {4, 3, 4}, {3, 2, 4}, {2, 2, 2}, {3, 3, 4}, {1, 4, 4}, {4, 1, 1}};
		System.out.println(new Solution().solution(A));
	}

}
